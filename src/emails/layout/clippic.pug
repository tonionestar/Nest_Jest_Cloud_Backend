doctype html
head
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible' content='ie=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='x-apple-disable-message-reformatting')
    style
        include email.css
    block title
    //if mso
      xml
        o:officedocumentsettings
          o:pixelsperinch 96
      style.
        table {border-collapse: collapse;}
        td,th,div,p,a {font-size: 16px; line-height: 26px;}
        .spacer,.divider,div,p,a,h1,h2,h3,h4,h5,h6 {mso-line-height-rule: exactly;}
        td,th,div,p,a,h1,h2,h3,h4,h5,h6 {font-family:"Segoe UI",Helvetica,Arial,sans-serif;}
table.wrapper(cellpadding='0' cellspacing='0' role='presentation' width='100%')
    tr
        td.px-sm-20(align='center' bgcolor='#F5F5F5' style='padding: 0px 0;')
