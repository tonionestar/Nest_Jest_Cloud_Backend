            table.container(cellpadding='0' cellspacing='0' role='presentation' width='500')
                tr
                    td.col(align='left')
                        // Logo
                        table(cellpadding='0' cellspacing='0' role='presentation' width='100%')
                            tr
                                td.col.py-sm-0(width='500' style='padding: 20px 50px;')
